@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "mainLayout.cshtml";

    var backgroundImage = Model.Value<IPublishedContent>("heroBackgroundImage")?.Url() ?? "";
    var signatureImage = Model.Value<IPublishedContent>("aboutSignatureImage")?.Url() ?? "";

    var formTitle = Model.Value<string>("formTitle") ?? "Request a Call Back";
    var formText = Model.Value<string>("formText") ?? "Dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur excepteur sint occaecat";
    var dropdownOptions = Model.Value<IEnumerable<string>>("dropdownOptions") ?? new List<string> { "Financial Consulting", "Financial Consulting 2", "Financial Consulting 3" };

    var whyChooseUsSectionTitle = Model.Value<string>("whyChooseUsSectionTitle") ?? "Why Choose Us";
    var whyChooseUsHeadline = Model.Value<string>("whyChooseUsHeadline") ?? "We Stand Out";
    var whyChooseUsSubtitle = Model.Value<string>("whyChooseUsSubtitle") ?? "+4.000 clients";
    var whyChooseUsBackgroundImage = Model.Value<IPublishedContent>("whyChooseUsBackgroundImage")?.Url();
    var whyChooseUsBackgroundDot = Model.Value<IPublishedContent>("whyChooseUsBackgroundDot")?.Url();
    var whyChooseUsButtonText = Model.Value<string>("whyChooseUsButtonText") ?? "Learn More";
    var whyChooseUsButtonUrl = Model.Value<string>("whyChooseUsButtonUrl") ?? "#";

    var successStorySectionTitle = Model.Value<string>("successStorySectionTitle") ?? "SUCCESS STORIES";
    var successStoryHeadline = Model.Value<string>("successStoryHeadline") ?? "Success story";
    var successStoryBackgroundImage = Model.Value<IPublishedContent>("successStoryBackgroundImage")?.Url() ?? "";
    var successStoryCustomersNumbers = Model.Value<string>("successStoryCustomersNumbers") ?? "689";
    var successStoryCustomersText = Model.Value<string>("successStoryCustomersText") ?? "More than 100 customers have been served";
    var successStoryProjectsNumbers = Model.Value<string>("successStoryProjectsNumbers") ?? "370";
    var successStoryProjectsText = Model.Value<string>("successStoryProjectsText") ?? "More than 370 projects have been completed";
    var successStoryBranchesNumbers = Model.Value<string>("successStoryBranchesNumbers") ?? "125";
    var successStoryBranchesText = Model.Value<string>("successStoryBranchesText") ?? "More than 125 branches have been established in Europe and America";
    var successStoryVideoImage = Model.Value<IPublishedContent>("successStoryVideoImage")?.Url() ?? "";

    var partnersImages = Model.Value<IEnumerable<IPublishedContent>>("partnersImages") ?? Enumerable.Empty<IPublishedContent>();

    var recentProjectsSectionTitle = Model.Value<string>("recentProjectsSectionTitle") ?? "Recent Projects";
    var recentProjectsHeadline = Model.Value<string>("recentProjectsHeadline") ?? "Our Latest Work";
    var recentProjectsItems = Model.ChildrenOfType("recentProjects").ToList();

    var itemCounter = 1; 
}
<section id="hero-slider" class="hero">
    <div class="background" style="background-image:url(@backgroundImage); background-size: cover; background-position: 60%"></div>
    <div class="container">
        <div class="container">
            <h1 class="headline">@Model.Value("heroHeadline")</h1>
            <p class="ingress">@Model.Value("heroText")</p>
            <div>
                <a href="@Model.Value("heroButtonUrl")" class="btn btn-primary">@Model.Value("heroButtonText")</a>
            </div>
        </div>
    </div>
</section>
<section id="about-us" class="about-us">
    <div class="container">
        <div class="content">
            <div class="headline">
                <h5>@Model.Value("aboutSectionTitle")</h5>
                <h2>@Model.Value("aboutHeadline")</h2>
            </div>
            <blockquote class="quote">@Model.Value("aboutQuote")</blockquote>
            <p>@Model.Value("aboutText")</p>
            <div class="signature-container">
                <div class="signature">
                    <img class="signature-image" src="@signatureImage" alt="@Model.Value("aboutSignature")">
                    <div class="clarification">
                        <p class="name">@Model.Value("aboutSignature")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-container">
            <h3>@formTitle</h3>
            <p>@formText</p>
            <form action="#" method="post">
                <div class="form-group">
                    <label for="name" class="sr-only">Name:</label>
                    <input type="text" id="name" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for="email" class="sr-only">Email Address:</label>
                    <input type="email" id="email" name="email" placeholder="Email Address" required>
                </div>
                <div class="form-group">
                    <label for="phone" class="sr-only">Phone:</label>
                    <input type="tel" id="phone" name="phone" placeholder="Phone" required>
                </div>
                <div class="form-group">
                    <label for="reason" class="sr-only">Reason for Call:</label>
                    <select id="reason" name="reason" required>
                        @foreach (var option in dropdownOptions)
                        {
                            <option value="@option">@option</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</section>
@Html.Partial("ourServicesSectionPartial")
<section id="why-choose-us" class="why-choose-us">
    <div class="container">
        <h2 class="why-choose-us-title">@whyChooseUsSectionTitle</h2>
        <h3 class="why-choose-us-subtitle">@whyChooseUsSubtitle</h3>
        <h3 class="why-choose-us-headline">@whyChooseUsHeadline</h3>
        <a href="@whyChooseUsButtonUrl" class="btn btn-primary">@whyChooseUsButtonText</a>
        <div class="why-choose-us-background" style="background-image:url(@whyChooseUsBackgroundImage)">
            <img src="@whyChooseUsBackgroundDot" alt="Background Dot" class="background-dot">
        </div>
    </div>
</section>
<section id="success-story" class="success-story">
    <div class="background" style="background-image:url(@successStoryBackgroundImage); background-size: cover; background-position: center;"></div>
    <div class="container">
        <h2 class="success-story-title">@successStorySectionTitle</h2>
        <h3 class="success-story-headline">@successStoryHeadline</h3>
        <div class="row success-story-stats">
            <div class="col-md-4">
                <h4>@successStoryCustomersNumbers</h4>
                <p>@successStoryCustomersText</p>
            </div>
            <div class="col-md-4">
                <h4>@successStoryProjectsNumbers</h4>
                <p>@successStoryProjectsText</p>
            </div>
            <div class="col-md-4">
                <h4>@successStoryBranchesNumbers</h4>
                <p>@successStoryBranchesText</p>
            </div>
        </div>
        <div class="success-story-video">
            <img src="@successStoryVideoImage" alt="Video Image" class="video-thumbnail">
        </div>
    </div>
</section>
<section id="recent-projects" class="recent-projects">
    <h2 class="recent-projects-title">@recentProjectsSectionTitle</h2>
    <h3 class="recent-projects-headline">@recentProjectsHeadline</h3>
    <div class="recent-projects-row">
        @foreach (var project in recentProjectsItems)
        {
            var projectImage = project.Value<IPublishedContent>("recentProjectsImage")?.Url(); 
            var projectTitle = project.Value<string>("recentProjectsTitle"); 
            var projectDescription = project.Value<string>("recentProjectsDescription"); 
            var projectDetailUrl = project.Url(); 

            var customProjectUrl = itemCounter == 1 
                ? "/projects/annual-report-for-juva-inc/"
                : itemCounter == 2 
                    ? "/projects/business-insights-for-sp-group-inc/"
                    : itemCounter == 3
                        ? "/projects/financial-advisor-to-irra-corp-inc/"
                            : itemCounter == 4
                            ? "/projects/budget-planning-for-buccura-inc/"
                                : projectDetailUrl;

            <a href="@customProjectUrl" class="recent-project-item" style="text-decoration: none; color: inherit;">
                <img src="@projectImage" alt="@projectTitle" class="recent-project-image" />
                <div class="recent-project-info">
                    <h4 class="recent-project-title">@projectTitle</h4>
                    <p class="recent-project-description">@projectDescription</p>
                    <i class="fas fa-arrow-right project-arrow"></i> 
                </div>
            </a>
            itemCounter++; 
        }
    </div>
</section>
@Html.Partial("partnersSectionPartial")